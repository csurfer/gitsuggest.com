{% extends "base.htm.j2" %}

{% block content %}

<div class="card">
  <div class="card-body">
    <h4 class="card-title">Welcome @{{ user_login }}!</h4>
    <hr/>
    <p class="card-text">Based on the repositories you have starred, we think you might like these repositories too...</p>
  </div>
</div>

{% for repo in repos %}
<br>
<div class="card">
  <div class="card-body">
    <h4 class="card-title">
        <a href="https://github.com/{{ repo.full_name }}" target="_blank">{{ repo.full_name }}</a>
    </h4>
    <p>{{ repo.language }} (&starf; {{ repo.stargazers_count }})
    <p>{{ repo.description }}</p>
  </div>
</div>

{% endfor %}

{% endblock %}